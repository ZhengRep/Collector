<!--pages/func/autony/autony.wxml-->
<view class="container">
    <view class="user-info items">
        <view class="item">
            <text>姓名</text>
            <input class='input' bindblur="getNameValue" placeholder="请输入" confirm-type="next" maxlength="5"/>
        </view>
        <view class="item">
            <text>学号</text>
            <input class='input' bindblur="getStuIdValue" placeholder="请输入" type='number' confirm-type="next" maxlength='10' />
        </view>
    </view>
    <view class="will-dec items">
        <view class="item">
            <text>意愿描述</text>
            <textarea class='input' bindblur="getWillDes" style='height: 100px;;' placeholder="请输入意愿" maxlength="1000"/>
        </view>
    </view>
    <view class="submit">
        <button class='item' bindtap="submit" type="default">提交</button>
    </view>
</view>
